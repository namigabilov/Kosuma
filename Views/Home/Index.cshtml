@{
    ViewData["Title"] = "Home Page";
}


<div>
    <div class="text-center">
        <h1>Welcome To Kosuma</h1>
    </div>
    <p>You can start the live stream and watch it, which one should we do today?</p>
    <a asp-controller="Home" asp-action="CreateStream" class="btn btn-success">Go To Live !</a>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @{
            foreach (var item in ViewData["streams"] as List<LiveStream>)
            {
                <div class="col">
                    <div class="card h-100 position-relative">
                        @{
                            if (item.IsLiveNow)
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">Live </span>
                            }
                        }
                        <img class="card-img-top" src="@item.Thumbnail" alt="Stream Thumbnail">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-controller="Home" asp-action="Stream" asp-route-id="@item.Id"
                                class="btn btn-primary">Watch</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>